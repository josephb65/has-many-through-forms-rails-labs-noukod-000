<%= form_for @post do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br><br>
  
    <%= f.label :content %><br>
    <%= f.text_field :content %><br><br>
  
    <%= f.label :category_ids, 'Select Categories' %><br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>
  
    <%= f.fields_for :categories do |cate| %>
      <%= cate.label :name, 'New Category Name' %><br>
      <%= cate.text_field :name %><br><br>
    <% end %>
  
    <%= f.submit %>
  <% end %>
